{
  "name": "slicksvg",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "bake": "bun run build",
    "build": "bun ./tests/validate-css.js && vite build && mv dist/src/index.html dist/index.html && rmdir dist/src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "vitest run",
    "check:watch": "vitest",
    "check:ui": "vitest --ui",
    "check:coverage": "vitest run --coverage",
    "check:e2e": "playwright test --workers=2",
    "check:e2e:headed": "playwright test --headed --workers=2",
    "check:e2e:debug": "playwright test --debug --workers=2",
    "check:e2e:ui": "playwright test --ui",
    "test": "npm run check && npm run check:e2e",
    "test:unit": "npm run check",
    "test:integration": "npm run check:coverage",
    "test:e2e": "npm run check:e2e",
    "test:all": "npm run check:coverage && npm run check:e2e",
    "playwright:install": "npx playwright install",
    "playwright:install-deps": "npx playwright install-deps"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.20",
    "@vitest/coverage-v8": "3.2.4",
    "cssnano": "^7.1.0",
    "cssnano-preset-advanced": "^7.0.8",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@fsegurai/codemirror-theme-tokyo-night-day": "^6.2.2",
    "@fsegurai/codemirror-theme-tokyo-night-storm": "^6.2.2",
    "@replit/codemirror-vim": "^6.3.0",
    "codemirror": "^6.0.2"
  }
}
